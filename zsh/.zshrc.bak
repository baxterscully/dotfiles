# ~/.zshrc: configuration for zsh shell

# History settings
# Don't put duplicate or empty lines in the history.
setopt HIST_IGNORE_DUPS        # Ignore duplicate entries
setopt HIST_IGNORE_SPACE       # Ignore commands that start with a space

# Append to the history file, don't overwrite it.
setopt APPEND_HISTORY

# Set history size and file size
HISTSIZE=1000
SAVEHIST=2000
HISTFILE=$HOME/.zsh_history

# Check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
setopt CHECK_WINSIZE

# Enable recursive globbing with '**' (uncomment if needed)
# setopt GLOBSTAR_SHORT

# Make 'less' more friendly for non-text input files
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# Set variable identifying the chroot you work in (used in the prompt below)
if [ -z "${debian_chroot:-}" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# Custom prompt without colors
PS1='${debian_chroot:+($debian_chroot)}%n@%m:%~%# '

# If this is an xterm, set the window title to user@host:dir
case "$TERM" in
  xterm*|rxvt*)
    PS1="\e]0;${debian_chroot:+($debian_chroot)}%n@%m: %~\a$PS1"
    ;;
esac

# Some handy ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Alias for Neovim as vim
alias vim='nvim'

# Enable programmable completion features
autoload -U compinit && compinit

# Turn off the terminal bell
setopt NO_BEEP

# Export paths for Anaconda and Neovim
export PATH="$PATH:$HOME/anaconda3/bin"
export PATH="$PATH:/opt/nvim/"

# NVM (Node Version Manager) setup
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # Load NVM
[ -s "$NVM_DIR/bash_completion" ] && . "$NVM_DIR/bash_completion"  # Load NVM bash_completion

# Auto-switch Node version based on .nvmrc
auto-switch-node-version() {
  NVMRC_PATH=$(nvm_find_nvmrc)
  CURRENT_NODE_VERSION=$(nvm version)

  if [[ -n "$NVMRC_PATH" ]]; then
    REQUESTED_NODE_VERSION=$(cat "$NVMRC_PATH")
    MATCHED_NODE_VERSION=$(nvm_match_version "$REQUESTED_NODE_VERSION")

    if [[ -n "$MATCHED_NODE_VERSION" && "$MATCHED_NODE_VERSION" != "N/A" ]]; then
      unset AUTOSWITCH_NODE_SUPPRESS_WARNING
      if [[ "$CURRENT_NODE_VERSION" != "$MATCHED_NODE_VERSION" ]]; then
        nvm use "$REQUESTED_NODE_VERSION"
      fi
    else
      if [[ "$AUTOSWITCH_NODE_SUPPRESS_WARNING" == "$NVMRC_PATH" ]]; then
        return
      fi
      echo "WARNING: No installed Node version satisfies $REQUESTED_NODE_VERSION"
      export AUTOSWITCH_NODE_SUPPRESS_WARNING="$NVMRC_PATH"
    fi
  else
    unset AUTOSWITCH_NODE_SUPPRESS_WARNING
    if [[ "$CURRENT_NODE_VERSION" != "$(nvm version default)" ]]; then
      nvm use default
    fi
  fi
}

# Run the above function whenever the directory changes
autoload -U add-zsh-hook
add-zsh-hook chpwd auto-switch-node-version

# Conda setup (auto-generated by 'conda init')
__conda_setup="$('/home/baxter/miniforge3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/baxter/miniforge3/etc/profile.d/conda.sh" ]; then
        . "/home/baxter/miniforge3/etc/profile.d/conda.sh"
    else
        export PATH="/home/baxter/miniforge3/bin:$PATH"
    fi
fi
unset __conda_setup

if [ -f "/home/baxter/miniforge3/etc/profile.d/mamba.sh" ]; then
    . "/home/baxter/miniforge3/etc/profile.d/mamba.sh"
fi

